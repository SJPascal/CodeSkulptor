# Implementation of classic arcade game Pong

import simplegui
import random

# initialize globals - pos and vel encode vertical info for paddles
WIDTH = 600
HEIGHT = 400       
BALL_RADIUS = 15 #I changed the ball radius, I thought is was too big.#
PAD_WIDTH = 8
PAD_HEIGHT = 80
HALF_PAD_WIDTH = PAD_WIDTH / 2
HALF_PAD_HEIGHT = PAD_HEIGHT / 2
LEFT = False
RIGHT = True
score1 = 0
score2 = 0
# initialize ball_pos and ball_vel for new ball in middle of table
ball_pos = [WIDTH / 2,  HEIGHT / 2]
ball_vel = [0,1]

RIGHT_SIDE = WIDTH - PAD_WIDTH - BALL_RADIUS
LEFT_SIDE = PAD_WIDTH + BALL_RADIUS

paddle1_pos = [0,PAD_HEIGHT]
paddle2_pos = [0,PAD_HEIGHT]
paddle1_vel = [0,1]
paddle2_vel = [0,1]
# if direction is RIGHT, the ball's velocity is upper right, else upper left
def spawn_ball(direction):
    global ball_pos, ball_vel # these are vectors stored as lists
    
    ball_pos = [WIDTH / 2 , HEIGHT / 2]
    horizontal = random.randrange(120, 240) / 100
    vertical = random.randrange(60, 180) / 100
    
    if direction == RIGHT:
        ball_vel = [horizontal, -vertical]
    elif direction == LEFT:
        ball_vel = [-horizontal,-vertical]
    
    

# define event handlers
def new_game():
    global paddle1_pos, paddle2_pos, paddle1_vel, paddle2_vel  # these are numbers
    global score1, score2  # these are ints
    spawn_ball(0)
    paddle1_pos = [PAD_WIDTH, PAD_HEIGHT]
    paddle2_pos = [WIDTH - PAD_WIDTH, PAD_HEIGHT]
    paddle1_pos[0] += paddle1_vel[0]
    paddle1_pos[1] += paddle1_vel[1]
    paddle2_pos[0] += paddle2_vel[0]
    paddle2_pos[1] += paddle2_vel[1]
    
    
def draw(canvas):
    global RIGHT_SIDE, LEFT_SIDE, score1, score2, paddle1_pos, paddle2_pos, ball_pos, ball_vel, BALL_RADIUS
    
        
    # draw mid line and gutters
    canvas.draw_line([WIDTH / 2, 0],[WIDTH / 2, HEIGHT], 1, "White")
    canvas.draw_line([PAD_WIDTH, 0],[PAD_WIDTH, HEIGHT], 1, "White")
    canvas.draw_line([WIDTH - PAD_WIDTH, 0],[WIDTH - PAD_WIDTH, HEIGHT], 1, "White")
        
    # update ball
    ball_pos[0] += ball_vel[0]
    ball_pos[1] += ball_vel[1]
    
    if ball_pos[1] - BALL_RADIUS <= 0 or ball_pos[1] + BALL_RADIUS >= HEIGHT:
        ball_vel[1] = -ball_vel[1]
        
    if ball_pos[0] - BALL_RADIUS <= PAD_WIDTH: 
        ball_vel[0] = -ball_vel[0] + .5
        if PAD_WIDTH + (paddle1_pos + HALF_PAD_HEIGHT) <= ball_pos[1] >= PAD_WIDTH + (paddle1_pos - HALF_PAD_HEIGHT):
            score2 += 1
            spawn_ball(RIGHT)
    elif ball_pos[0] - BALL_RADIUS <= PAD_WIDTH:
        ball_vel[0] = -ball_vel[0]
            
     
    if ball_pos[0] + BALL_RADIUS >= WIDTH - PAD_WIDTH:
        ball_vel [0] = -ball_vel[0] + .5
        if WIDTH + (paddle2_pos + HALF_PAD_HEIGHT) >= ball_pos[1] <= WIDTH + (paddle2_pos - HALF_PAD_HEIGHT):
            score1 += 1
            spawn_ball(LEFT)
            
    elif ball_pos[0] + BALL_RADIUS >= WIDTH - PAD_WIDTH:
        ball_vel[0] = -ball_vel[0]
    
    
    
        
    # draw ball
    canvas.draw_circle(ball_pos, BALL_RADIUS, 3, 'purple', 'white')
    
    # update paddle's vertical position, keep paddle on the screen
    if paddle1_pos > HEIGHT - HALF_PAD_HEIGHT:
        paddle1_pos = HEIGHT - HALF_PAD_HEIGHT
    elif paddle1_pos < HEIGHT:
        paddle1_pos = HALF_PAD_HEIGHT
    if paddle2_pos > HEIGHT - HALF_PAD_HEIGHT:
        paddle2_pos = HEIGHT - HALF_PAD_HEIGHT
    elif paddle2_pos < HEIGHT:
        paddle2_pos = HALF_PAD_HEIGHT

    # draw paddles
    canvas.draw_line([HALF_PAD_WIDTH, paddle1_pos + HALF_PAD_HEIGHT], [HALF_PAD_WIDTH, paddle1_pos - HALF_PAD_HEIGHT], PAD_WIDTH, "Red")
    canvas.draw_line([WIDTH - HALF_PAD_WIDTH, paddle2_pos + HALF_PAD_HEIGHT], [WIDTH - HALF_PAD_WIDTH, paddle2_pos - HALF_PAD_HEIGHT], PAD_WIDTH, "BlUE")
    # determine whether paddle and ball collide    
    
    # draw scores
        
def keydown(key):
    global paddle1_vel, paddle2_vel
   
def keyup(key):
    global paddle1_vel, paddle2_vel


# create frame
frame = simplegui.create_frame("Pong", WIDTH, HEIGHT)
frame.set_draw_handler(draw)
frame.set_keydown_handler(keydown)
frame.set_keyup_handler(keyup)


# start frame
new_game()
frame.start()
